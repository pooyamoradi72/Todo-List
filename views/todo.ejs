<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>.: Todo App .:</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/bootstrap/bootstrap-icons/font/bootstrap-icons.min.css">
    <link href="/css/bootstrap/css/bootstrap.min.css" rel="stylesheet" >
<script src="css/bootstrap/js/bootstrap.bundle.min.js" ></script>
<script src="/js/jquery.min.js"></script>

  </head>

  <body>
    <div class="header">
      <h1>TODO Application</h1>
      <hr class="hr1"/>
      <hr class="hr2" />
  
    </div>
   <!-- test -->
 
    <!-- Button trigger modal -->
 <div class="btn-create">
  <button type="button" class="btn btn-primary bi bi-plus-square" data-toggle="modal" data-target="#exampleModalCenter" onclick="$('#exampleModalCenter').modal('show')">
    Create Todo
  </button>
 </div>
    
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Create New Todo</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="$('#exampleModalCenter').modal('hide'),document.getElementById('txt-title').value='',document.getElementById('txt-dec').value=''" >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="Create">
              <form method="post" action="/" class="form">
                <label for="title">Todo Name</label>
                <input type="text" placeholder="Todo Name" name="title" id="txt-title" required />
                <br>
                <br>
                <label for="Description">Description</label>
                <input type="text" placeholder="Todo Description" name="Description" id="txt-dec"/>
                <br>
                <br>
                <label for="isDone">is Done Status</label>
                <input
                  type="checkbox"
                  name="isDone"
                  value="true"
                  checked
                  id=""
                  placeholder="Is Done"
                />
                
       
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="$('#exampleModalCenter').modal('hide'),document.getElementById('txt-title').value='',document.getElementById('txt-dec').value=''">Close</button>
            <input type="submit" value="Create new TODO"  class="btn btn-primary"/>
          </form>
        </div>
          </div>
        </div>
      </div>
    </div>
    <div class="content">
      <table class="tbl get table table-striped ">
        <thead>
          <tr>
            <th scope="col">Todo Name</th>
            <th scope="col">Decription</th>
            <th scope="col">IsDone Status</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
          <% locals.todos.forEach(function(todo){ %>
       

          <tr class="get">
            <td><%= todo.title %></td>
            <td><%= todo.Description %></td>
            <td><%= todo.isDone %></td>
            <td><a href="/delete/<%= todo.title %>" class="bi bi-trash">Delete</a></td>
            <td><a href="/update/<%= todo.title %>" class="bi bi-pen">Edit</a></td>
          </tr>
          <% }); %>
      </table>
    </div>
